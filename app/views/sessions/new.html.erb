<div id='login'>
  <h1 class='text'>Log in</h1>
  <%= form_for(:session, url: login_path) do |f| %>

    <p><%= f.email_field :email, placeholder: 'User@domain.com', class: 'input' %></p>
    <p><%= f.password_field :password, placeholder: 'Password', class: 'input'%></p>
    <p><%= f.check_box :remember_me %><span class='check'>Remember me on this computer</span></p>

    <h6><%= f.submit "Log in", class: 'button input' %></h6>
  <% end %>
</div>